{
  "env": {
    "es6": true
  },
  "globals": {
    "BigInt": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended", "prettier"],
  "rules": {
    "no-html-link-for-pages": "off",
    "no-unused-vars": "warn"
  },

  "overrides": [
    {
      "files": ["*.js"],
      "processor": "@graphql-eslint/graphql"
    },
    {
      "files": ["*.graphql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"]
    }
  ]
}
